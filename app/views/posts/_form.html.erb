<%= form_for(@post) do |f| %>
  <%= f.label :author, "Post Author: "%>
  <%= f.text_field :author %>
<br>
  <%= f.label :title, "Post Title: " %>
  <%= f.text_field :title %>
<br>
  <%= f.label :content, "Post Content: " %>
  <!-- <%= f.text_field :content %> -->
  <%= f.text_area :content, size: "60x12" %>
<br>
  <%= f.submit "Create" %>
<% end %>
