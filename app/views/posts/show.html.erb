<h2><%= @post.title %> </h2>
<p><%= @post.content %> </p>
<p><%= @comment.content %> </p>
<br>
<a href="/posts/<%= @post.id %>/edit">Edit Post</a></h2>
<br>
<a href="/posts">All Posts</a></h2>


<h3>Add a Comment</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.author %></strong>
    <br />
    <p><%= comment.content %></p>
    <p><%= link_to 'Delete', post_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>
